{
  "extends": "../tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS",
    }
  },
  "compilerOptions": {
    "skipLibCheck": false,
    "esModuleInterop": false,
    "tsBuildInfoFile": "../node_modules/.tsbuildinfo/site.tsbuildinfo",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "types": ["@emotion/react"],
    "noEmit": true
  },
  "include": ["@types/**.ts", "./src"]
}
