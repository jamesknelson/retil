{
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "dist/es",
    "baseUrl": "src",
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017"
    ]
  },
  "exclude": [
    "demo",
    "dist",
    "examples",
    "node_modules",
    "notes",
    "test"
  ]
}
